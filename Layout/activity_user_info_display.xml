<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.i170212_i170321.UserInfoDisplay">

    <RelativeLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/delete"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:src="@drawable/arrow_up"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/arrow_up"/>
        <TextView
            android:layout_below="@+id/arrow_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/myProfile"
            android:layout_marginTop="20sp"/>
        <LinearLayout
            android:layout_below="@+id/myProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userDetails"
            android:minHeight="50dp"
            android:weightSum="6"
            android:layout_marginTop="15sp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:id="@+id/userImage"
                android:layout_weight="2"
                 android:src="@drawable/user"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Person Name"
                    android:id="@+id/userName"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:drawableLeft="@drawable/phone"
                    android:text="03006520783"
                    android:textSize="15sp"
                    android:id="@+id/userPhone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userPhone"
                    android:text="Male, 24"
                    android:textSize="15sp"
                    android:id="@+id/userAge"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_weight="1"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:id="@+id/userEdit"
                android:layout_gravity="end"
                android:src="@drawable/edit"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/comma"
            android:id="@+id/comma"
            android:layout_below="@+id/userDetails"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comma"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:id="@+id/userBio"
            android:text="akfkaknfkankfjjnkanfjnanfanf"
            android:layout_marginHorizontal="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>