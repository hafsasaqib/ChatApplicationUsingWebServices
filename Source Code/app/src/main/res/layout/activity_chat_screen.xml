<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.example.i170212_i170321.chatScreen">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:elevation="10sp"
        android:background="@drawable/below_line"
        >
        <ImageView
            android:layout_width="50sp"
            android:id="@+id/back_button"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            android:layout_marginVertical="10sp"
            android:layout_weight="4"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abid Iqbal"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="is online"
                android:textStyle="bold"
                android:layout_marginHorizontal="20sp"
                android:textSize="10sp"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/profileImage"
            android:layout_weight="3"
            android:background="@drawable/round_person"
            android:src="@drawable/user"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/header"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_rv"/>

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_corners"
        android:elevation="30sp"
        android:outlineAmbientShadowColor="@color/grey"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingLeft="12dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/emojiButton"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_camera"
                android:src="@drawable/ic_outline_camera_alt_24"/>

            <EditText
                android:id="@+id/text_of_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:hint="Type Your Message Here!"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:paddingBottom="15sp"
                android:textColorHint="#c4c0bd"
                android:background="@null"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/send"/>

    </LinearLayout>

</RelativeLayout>